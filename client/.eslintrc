{
	"extends": "standard",
	"rules": {
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"semi": ["error", "always"],
		"space-before-function-paren": ["error", {
			"anonymous": "always",
			"named": "never",
			"asyncArrow": "always"
		}],
		"brace-style": ["error", "stroustrup"],
		"yoda": "off",
		"no-new": "off"
	}
}
